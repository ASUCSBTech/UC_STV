{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"definitions": {
		"ballot": {
			"type": "object",
			"properties": {
				"ballot_id": {
					"type": "string",
					"description": "An unique ID that corresponds to a specific ballot."
				},
				"ballot_data": {
					"type": "object",
					"description": "A dictionary of races with the race ID as the key.",
					"additionalProperties": {
						"type": "array",
						"$ref": "#/definitions/ballot_data_element"
					},
					"minProperties": 1
				}
			},
			"required": ["ballot_id", "ballot_data"]
		},
		"ballot_data_element": {
			"type": "array",
			"description": "An array of candidate IDs in order of preference.",
			"items": { "type": "string" }
		}
	},

	"type": "array",
	"description": "An array of ballots.",
	"items": {
		"type": "object",
		"$ref": "#/definitions/ballot"
	},
	"minItems": 1
}